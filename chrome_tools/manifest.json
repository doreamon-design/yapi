{
    "manifest_version": 2,
    "name": "yapi-request",
    "description": "这个chrome扩展赋予html页面跨域请求http(s)的能力",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
     "permissions": [ "tabs", "storage", "webRequest", "webRequestBlocking", "*://*/*" ],
    "background": 
    {
      "scripts" : [
          "background.js"
          ]
    },
     "content_scripts": [{
          "matches": ["http://*/*", "https://*/*"],
        "js": [
            "response.js"
        ]
    }]
}